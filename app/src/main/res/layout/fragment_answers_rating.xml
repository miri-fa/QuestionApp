<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ChooseFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/title_rating_question_answer"
            android:layout_width="314dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10sp"
            android:background="@drawable/question_input"
            android:ems="10"
            android:text="TÃ­tulo de la pregunta"
            android:textAlignment="center"
            android:textSize="20dp" />

        <RelativeLayout
            android:layout_width="311dp"
            android:layout_height="173dp"
            android:layout_below="@+id/title_rating_question_answer"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="25sp"
            android:background="@drawable/question_input"

            android:ems="10"
            android:focusable="false"
            android:focusableInTouchMode="false">

            <RatingBar
                android:id="@+id/ratingBarAnswer"
                android:layout_width="wrap_content"
                android:layout_height="50sp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30sp"
                android:isIndicator="false"
                android:max="5"
                android:numStars="5"
                android:progressBackgroundTint="#818181"
                android:progressTint="#FFDE48"
                android:stepSize="1" />

            <TextView
                android:id="@+id/lower_extreme_answer"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="85dp"
                android:ems="10"
                android:inputType="text"
                android:text="Extremo izquierdo"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/percentage_rating_total"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="93dp"
                android:layout_marginTop="130dp"
                android:ems="10"
                android:inputType="text"
                android:text="porcentaje final"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/higher_extreme_answer"
                android:layout_width="130dp"
                android:layout_height="wrap_content"

                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="85dp"
                android:layout_marginEnd="1dp"
                android:ems="10"
                android:inputType="text"
                android:text="Extremo derecho"
                android:textAlignment="center" />


        </RelativeLayout>


    </RelativeLayout>





</RelativeLayout>