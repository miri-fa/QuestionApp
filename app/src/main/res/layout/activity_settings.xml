<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/finalbg"
    android:theme="@style/ThemeOverlay.Question2.FullscreenContainer"
    tools:context=".FullscreenActivity">

    <FrameLayout
        android:id="@+id/frameMain"
        android:layout_width="414dp"
        android:layout_height="91dp"
        android:layout_marginBottom="2dp"
        app:layout_constraintBottom_toTopOf="@+id/frameLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/settingsGoBack"
            android:layout_width="53dp"
            android:layout_height="48dp"

            android:background="@drawable/arrow_back"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/title1"
            android:layout_width="160dp"
            android:layout_height="83dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:fontFamily="@font/pacifico_normal"
            android:shadowColor="#f4a0bf"
            android:textColor="#faf0d7"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="5"
            android:text="Ajustes"
            style="@style/FixedResultsText" />


    </FrameLayout>


    <FrameLayout
        android:id="@+id/frameLayout2"
        android:layout_width="362dp"
        android:layout_height="607dp"
        android:background="@drawable/shape"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.75">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="top"
            android:background="@drawable/main_shape">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TamaÃ±o de la letra"
                android:fontFamily="@font/lato_bold"
                android:textColor="#FFF"
                android:layout_gravity="center"
                android:textSize="30sp"
                />
        </FrameLayout>
        <Spinner
            android:id="@+id/fontSizeSpinner"
            android:layout_marginTop="80dp"
            android:layout_width="match_parent"
            android:layout_height="30sp"
            android:entries="@array/font_sizes"
            android:background="@drawable/bottom_buttons_main"/>

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="80dp"
            android:layout_gravity="right"
            android:src="@drawable/dropdown_arrow"
            android:layout_marginBottom="10sp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/textSizeButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="left"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="120dp"
            style="@style/FixedButtonText"
            android:layout_marginRight="10sp"
            android:background="@drawable/bottom_buttons_main"
            android:fontFamily="@font/lato_bold"
            android:text="aplicar"
            android:textColor="#FFF"
            android:textSize="15sp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="top"
            android:layout_marginTop="220dp"
            android:background="@drawable/main_shape">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notificaciones"
                android:fontFamily="@font/lato_bold"
                android:textColor="#FFF"
                android:layout_gravity="center_horizontal"
                android:textSize="30sp"
                />

            <Switch
                android:id="@+id/switchNotifications"
                android:layout_width="263dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:textSize="20sp"
                android:fontFamily="@font/lato_bold"
                android:text="Activar"
                android:textColor="#FFF" />

        </FrameLayout>


    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>