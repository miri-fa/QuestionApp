<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ChooseFragment">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <EditText
            android:id="@+id/title_open_question"
            android:layout_width="314dp"
            android:layout_height="34dp"
            android:layout_marginTop="10sp"
            android:background="@drawable/question_input"
            android:layout_gravity="center_horizontal"
            android:ems="10"
            android:hint="TÃ­tulo de la pregunta"
            android:inputType="text" />

        <FrameLayout
            android:id="@+id/openquestionlayout"
            android:layout_width="314dp"
            android:layout_height="200dp"
            android:layout_marginTop="60sp"
            android:background="@drawable/question_input"
            android:layout_gravity="center_horizontal"
            android:ems="10"
            >
            <EditText
                android:id="@+id/input_multiple_choice"
                android:layout_width="240sp"
                android:layout_height="30sp"
                android:layout_marginRight="30sp"
                android:layout_marginTop="10sp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/textinput"
                >

            </EditText>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/add_option_open"
                android:layout_width="60sp"
                android:layout_marginTop="5sp"
                android:layout_height="40sp"
                android:textColor="#FFE9C5"
                android:background="@drawable/buttongradient"
                android:layout_marginLeft="250sp"
                android:fontFamily="@font/lato_bold"
                style="@style/FixedResultsText"
                android:text="+" />

            <ListView
                android:id="@+id/list_create_multiple_options"
                android:layout_width="300sp"
                android:layout_height="145dp"
                android:layout_marginTop="20sp"
                android:choiceMode="singleChoice"
                android:layout_gravity="center"></ListView>

        </FrameLayout>




    </FrameLayout>





</FrameLayout>