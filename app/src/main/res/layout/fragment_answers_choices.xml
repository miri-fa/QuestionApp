<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ChooseFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/answer_choices_title"
            android:layout_width="314dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10sp"
            android:background="@drawable/question_input"
            android:ems="10"
            android:text="TÃ­tulo de la pregunta"
            android:textAlignment="center"
            android:textSize="20dp" />

        <FrameLayout
            android:id="@+id/openquestionlayout"

            android:layout_width="314dp"
            android:layout_height="200dp"
            android:layout_below="@+id/answer_choices_title"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:background="@drawable/question_input"
            android:ems="10"
            android:inputType="text">


            <ListView
                android:id="@+id/answers_choices_list"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:cacheColorHint="#00000000"
                android:dividerHeight="1px"
                android:drawSelectorOnTop="false"
                android:fadingEdge="vertical"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:scrollbars="none"
                android:smoothScrollbar="true"
                android:soundEffectsEnabled="true" />

            <ListView
                android:id="@+id/answers_percentage_list"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:cacheColorHint="#00000000"
                android:dividerHeight="1px"
                android:drawSelectorOnTop="false"
                android:fadingEdge="vertical"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:scrollbars="none"
                android:smoothScrollbar="true"
                android:soundEffectsEnabled="true" />

        </FrameLayout>


    </RelativeLayout>





</RelativeLayout>