<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ChooseFragment">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <Spinner
                android:id="@+id/optionsQuestion"
                android:layout_width="match_parent"
                android:layout_height="34sp"
                android:layout_marginHorizontal="20sp"
                android:layout_marginTop="30sp"
                android:background="@drawable/question_input"
                android:fontFamily="@font/lato_bold"
                android:popupBackground="@drawable/question_input"
                android:spinnerMode="dropdown"
                android:textColor="#FFE9C5" />

            <ImageView

                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_marginHorizontal="355sp"
                android:layout_marginTop="30sp"
                android:src="@drawable/arrow" />
            <FrameLayout
                android:id="@+id/fragment_container_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="70sp"
               ></FrameLayout>


        </FrameLayout>





</FrameLayout>